{
  "name": "jiti-tsc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/jiti-tsc/src",
  "projectType": "library",
  "tags": ["scope:core", "type:lib", "publishable"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "inputs": ["lint-eslint-inputs"]
    },
    "unit-test": {},
    "int-test": {},
    "build": {
      "options": {
        "assets": [
          "{projectRoot}/*.md",
          {
            "input": "{projectRoot}/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "{projectRoot}/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "{projectRoot}/src",
            "glob": "**/bin/*.js",
            "output": "./src"
          }
        ]
      }
    },
    "cli-test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/src/cli.js tools/test-app.ts",
        "cwd": "{projectRoot}",
        "env": {
          "JITI_TSCONFIG_PATH": "tools/tsconfig.json"
        }
      },
      "dependsOn": ["build"]
    },
    "import-test": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/src/cli.js tools/cli.ts",
        "cwd": "{projectRoot}",
        "env": {
          "JITI_TSCONFIG_PATH": "tools/tsconfig.json"
        }
      }
    }
  }
}
