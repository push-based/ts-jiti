{
  "name": "jiti-tsc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/jiti-tsc/src",
  "projectType": "library",
  "tags": ["scope:core", "type:lib", "publishable"],
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint",
        "args": [
          "'{projectRoot}/src/**/*.ts'",
          "{projectRoot}/package.json",
          "--config={projectRoot}/eslint.config.js",
          "--max-warnings=0",
          "--no-warn-ignored",
          "--error-on-unmatched-pattern=false"
        ]
      }
    },
    "unit-test": {},
    "int-test": {},
    "build": {
      "options": {
        "assets": [
          "{projectRoot}/*.md",
          {
            "input": "{projectRoot}/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "{projectRoot}/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "{projectRoot}/src",
            "glob": "**/bin/*.js",
            "output": "./src"
          }
        ]
      }
    },
    "demo": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run @push-based/jiti-tsc --inputFile=./tools/jiti-tsc/demo/input-schema.ts --outputFile=./tools/jiti-tsc/demo/output-schema.ts"
      },
      "dependsOn": ["build"]
    }
  }
}
